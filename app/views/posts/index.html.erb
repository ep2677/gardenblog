<body class="posts_index">
<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<h1 class="new_post"><%=link_to 'New Post', new_post_path%></h1>

  <%= @posts.each do |post| %>
  <section class="post_section col-lg-12">
    <div class="row">
      <p class="label"> Title: <%= post.title %></p>
      <p class="date"><%= post.created_at.strftime("%a %m/%Y %H:%M") %></p>
    </div>
    <p><%= post.article %></p>
    <p class="label">Author: <%= post.author %></p>
    <div class="row">
      <p><%= link_to 'Show', post %> | <%= link_to 'Edit', edit_post_path(post)%> | <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>

  </section>
  <%end%>
   <br>
  
</body>
